<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BarcodeScanner"
             x:Class="BarcodeScanner.MainPage" Title="Lector de Códigos">


    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Button Text="Scan" Clicked="Button_Clicked"/>
                <Label Text="" x:Name="mycode" TextColor="Red" HorizontalOptions="Center"/>

            </StackLayout>
            <StackLayout>
                <Entry x:Name="entAndroidID" Placeholder="Android ID" ></Entry>
                <Entry x:Name="entMacAddress" Placeholder="MacAddress ID" ></Entry>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
